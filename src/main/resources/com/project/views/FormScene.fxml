<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="617.0" prefWidth="1042.0"
            xmlns="http://javafx.com/javafx/21" fx:controller="com.project.controller.FormController">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="617.0" prefWidth="537.0">
            <content>
                <VBox fx:id="vboxMain" prefHeight="615.0" prefWidth="519.0" spacing="16.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="32.0" top="20.0"/>
                    </padding>
                    <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="902.0" spacing="32.0">
                        <children>
                            <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="315.0" spacing="4.0">
                                <children>
                                    <ImageView fx:id="iconFrom" fitHeight="29.0" fitWidth="30.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <image>
                                            <Image url="@../img/airplane-takeoff.png"/>
                                        </image>
                                    </ImageView>
                                    <Label text="Kota Asal"/>
                                </children>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="315.0" spacing="4.0">
                                <children>
                                    <ImageView fx:id="iconDestination" fitHeight="29.0" fitWidth="39.0"
                                               pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../img/airplane-landing.png"/>
                                        </image>
                                    </ImageView>
                                    <Label text="Kota Asal"/>
                                </children>
                            </HBox>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="664.0" spacing="32.0">
                        <children>
                            <SearchableComboBox fx:id="cbFrom" minHeight="40.0" prefHeight="25.0" prefWidth="315.0"
                                                promptText="Kota Asal"/>
                            <SearchableComboBox fx:id="cbDestination" minHeight="40.0" prefHeight="25.0"
                                                prefWidth="315.0" promptText="Kota Tujuan"/>
                        </children>
                    </HBox>
                    <Label graphicTextGap="8.0" text="Tanggal Keberangkatan">
                        <graphic>
                            <ImageView fx:id="iconFrom1" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <image>
                                    <Image url="@../img/calendar.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Label>
                    <DatePicker minHeight="40.0" prefHeight="40.0" prefWidth="664.0"/>
                    <Label graphicTextGap="8.0" text="Kelas Kursi">
                        <graphic>
                            <ImageView fx:id="iconFrom11" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <image>
                                    <Image url="@../img/seat.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Label>
                    <ChoiceBox fx:id="choiceSeat" minHeight="32.0" prefWidth="150.0"/>
                    <VBox fx:id="vboxPassengerField" prefWidth="379.0" spacing="16.0">
                        <children>
                            <HBox spacing="16.0">
                                <children>
                                    <VBox prefHeight="65.0" spacing="8.0">
                                        <children>
                                            <Label text="Nama Penumpang 1"/>
                                            <TextField minHeight="40.0" prefHeight="40.0" prefWidth="303.0"
                                                       promptText="Nama penumpang"/>
                                        </children>
                                    </VBox>
                                    <VBox fx:id="vboxPassengerField11" prefHeight="65.0" spacing="8.0">
                                        <children>
                                            <Label text="Usia Penumpang 1"/>
                                            <TextField minHeight="40.0" prefHeight="40.0" prefWidth="303.0"
                                                       promptText="Nama penumpang"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <Button mnemonicParsing="false" onAction="#onClickAddPassenger" text="Tambah penumpang...">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../img/person-add.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button onAction="#onSubmit" prefHeight="25.0" text="Submit"/>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
